@page

@model GestionaleHR.Pages.AnagraficaSediModel
@{
    ViewData["Title"] = "AnagraficaSedi";
}

<!--
    pagine senza log
    bottone lista sedi, bottone aggiunta sedi (se e loggato apre il form a scomparsa, se non e loggato collega alla pagina log) form a scomparsa con
    descrizione sede, indirizzo, recapito, referente
-->


<h2>Elenco delle Sedi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Descrizione Sede</th>
            <th>Indirizzo</th>
            <th>Recapito</th>
            <th>Email</th>
            <th>Referente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sede in Model.Lista)
        {
            <tr>
                <td>@sede.DescrizioneSede</td>
                <td>@sede.IndirizzoSede</td>
                <td>@sede.RecapitoTelSede</td>
                <td>@sede.EmailSede</td>
                <td>@sede.IdDipendente</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sede.IDSede">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@sede.IDSede" onclick="return confirm('Sei sicuro di voler eliminare questa sede?')">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button asp-page="/Aggiunginuovasede" id="addButton">Aggiungi Nuova Sede</button>

@section Scripts {
    <script>
        document.getElementById("addButton").addEventListener("click", function () {
            document.getElementById("addForm").style.display = "block";
        });
    </script>
}